<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anti-Asian Racism Survey Quiz</title>

    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/quiz.css">

    <!-- fonts -->
    <link rel="stylesheet" href="https://use.typekit.net/tbs6myl.css">
</head>

<body>

    <h1>SSE: <span id="state"></span></h1>
    <!-- <h3>Data: <span id="data"></span></h3> -->

    <!-- <div class="loader" id="loader"></div> -->

    <!-- <div class="container invisible" id="main-section"> -->
    <div class="container" id="main-section">
        <section id="game" class="justify-center flex-column">
            <img src="images/oasw-logo-horizontal-English.png" alt="OASW Logo" class="game-logo">

            <section class="hud" id="hud">
                <!-- <section class="hud-item" id="hud-question">
                    <p id="progress-text" class="hud-prefix"></p>
                    <section id="progress-bar">
                        <div id="progress-bar-full"></div>
                    </section>
                </section> -->
                <section class="hud-item" id="timer">
                    <p class="hud-prefix">Timer</p>
                    <!-- <h1 class="timer-text" id="timer-text"></h1> -->
                    <h1><span id="data"></span></h1>
                </section>

                <section class="hud-item visualizer-section" id="visualizer-section">
                    <div class="vis-container">
                        <span class="vis-label">A</span>
                        <section id="visualizer-a" class="visualizer">
                            <div id="visualizer-a-full" class="visualizer-full"></div>
                        </section>
                        <span id="visualizer-text-a" class="visualizer-text">0</span>
                    </div>

                    <div class="vis-container">
                        <span class="vis-label">B</span>
                        <section id="visualizer-b" class="visualizer">
                            <div id="visualizer-b-full" class="visualizer-full"></div>
                        </section>
                        <span id="visualizer-text-b" class="visualizer-text">0</span>
                    </div>

                    <div class="vis-container">
                        <span class="vis-label">C</span>
                        <section id="visualizer-c" class="visualizer">
                            <div id="visualizer-c-full" class="visualizer-full"></div>
                        </section>
                        <span id="visualizer-text-c" class="visualizer-text">0</span>
                    </div>

                    <div class="vis-container">
                        <span class="vis-label">D</span>
                        <section id="visualizer-d" class="visualizer">
                            <div id="visualizer-d-full" class="visualizer-full"></div>
                        </section>
                        <span id="visualizer-text-d" class="visualizer-text">0</span>
                    </div>
                </section>

                <section class="hud-item" id="hud-score">
                    <p class="hud-prefix">Score</p>
                    <h1 class="hud-main-text" id="score-text">0</h1>
                </section>
            </section>

            <h2 id="question">Test question?</h2>

            <!-- <div class="choice-container">
                <p class="choice-text" data-number="1">Choice 1</p>
                <p class="choice-prefix flex-center">A</p>
            </div>
            <div class="choice-container">
                <p class="choice-text" data-number="2">Choice 2</p>
                <p class="choice-prefix flex-center">B</p>
            </div>
            <div class="choice-container">
                <p class="choice-text" data-number="3">Choice 3</p>
                <p class="choice-prefix flex-center">C</p>
            </div>
            <div class="choice-container">
                <p class="choice-text" data-number="4">Choice 4</p>
                <p class="choice-prefix flex-center">D</p>
            </div> -->

            <form name="question-choices">
                <div class="choice-container">
                    <input id="choice1" class ="choice-radio" type="radio" name="choice" value="A">
                    <label for="choice1" class="choice-text" data-number="1"></label>
                    <label for="choice1" class="choice-prefix flex-center">A</label>
                </div>
                <div class="choice-container">
                    <input id="choice2"  class ="choice-radio" type="radio" name="choice" value="B">
                    <label for="choice2" class="choice-text" data-number="2"></label>
                    <label for="choice2" class="choice-prefix flex-center">B</label>
                </div>
                <div class="choice-container">
                    <input id="choice3"  class ="choice-radio" type="radio" name="choice" value="C">
                    <label for="choice3" class="choice-text" data-number="3"></label>
                    <label for="choice3" class="choice-prefix flex-center">C</label>
                </div>
                <div class="choice-container">
                    <input id="choice4"  class ="choice-radio" type="radio" name="choice" value="D">
                    <label for="choice4" class="choice-text" data-number="4"></label>
                    <label for="choice4" class="choice-prefix flex-center">D</label>
                </div>
                <button id="submit-button" class="invisible" type="submit"></button>
                <input id="question-for-google" class="invisible" type="radio" name="question" value="0" selected>
            </form>

            <section class="hud-item" id="hud-question">
                <p id="progress-text" class="hud-prefix"></p>
                <section id="progress-bar">
                    <div id="progress-bar-full"></div>
                </section>
            </section>
        </section>
    </div>

    <p id="output"></p>

    <script src="js/quiz.js"></script>
</body>

</html>